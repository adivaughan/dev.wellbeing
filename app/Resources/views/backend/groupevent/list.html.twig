{% extends 'base.html.twig' %} {% block body %}

<div class='container'>
  <h1>List of current courses</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Course</th>
        <th scope="col">Venue</th>
        <th scope="col">Date</th>
        <th scope="col">Time</th>
        <th scope="col">Active</th>
        <th scope="col">Map</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {% for i in groupevent %}
      <tr>
        <td>{{ i.grouptype }}</td>
        <td>{{ i.venue }}</td>
        <td>{{ i.date|date ("d/m/Y") }}</td>
        <td>{{ i.date|date ("H:i") }}</td>
        <td>{% if i.active == false %}
          <i class="far fa-times-circle"></i>
          {% elseif i.active == true %}
          <i class="fas fa-check text-center"></i>
          {% endif %}
        </td>
        <td>
          <a href="https://www.google.com/maps/search/?api=1&query={{ i.venue }}+{{ i.venue.postcode }}" target="_blank" i
            class="fas fa-map-marker-alt"></a>
          <td>
            <a class="btn btn-info" href="{{ path('groupevent_edit', {'groupevent': i.Id}) }}">Edit</a>
          </td>
          <td>
            <a class="btn btn-danger" href="{{ path('groupevent_delete', {'groupevent': i.Id}) }}">Delete</a>
          </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <br>

  <a class="btn btn-primary" href="{{ path ('groupevent_new')}}">Add course</a>
</div>

{% endblock %}
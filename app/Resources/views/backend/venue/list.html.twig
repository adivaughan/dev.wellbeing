{% extends 'base.html.twig' %} {% block body %}
<div class='container'>
  <h4 class="display-4">List of venues</h4>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Venue</th>
        <th scope="col">Location</th>
        <th scope="col">Postcode</th>
        <th scope="col">Bus Routes</th>
        <th scope="col">Trainstaions</th>
        <th scope="col">Site notes</th>
        <th scope="col">Active</th>
        <th scope="col">Google Maps</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {% for i in venue %}
      <tr>
        <th scope="row">{{ i.venue}}</th>
        <td>{{ i.location }}</td>
        <td>{{ i.postcode }}</td>
        <td>{{ i.busroutes }}</td>.
        <td>{{ i.trainstations }}</td>
        <td>{{ i.sitenotes }}</td>
        <td>{% if i.active == false %}
          <i class="far fa-times-circle"></i>
          {% elseif i.active == true %}
          <i class="fas fa-check text-center"></i>
          {% endif %}
          <td>
            <a href="https://www.google.com/maps/search/?api=1&query={{ i.venue }}+{{ i.postcode }}" target="_blank" i class="fas fa-map-marker-alt"></a>
          </td>
          <td>
            <a class="btn btn-info" href="{{ path('venue_edit', {'venue': i.Id}) }}">Edit</a>
          </td>
          <td>
            <a class="btn btn-danger" href="{{ path('venue_delete', {'venue': i.Id}) }}">Delete</a>
          </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-3"></div>
    <div class="col-sm-6 text-right">
      <a class="btn btn-secondary" href="{{ path ('venue_new')}}">Create new venue</a>
    </div>
  </div>
  <div class="row">
    <a class="btn btn-primary" href="{{ path ('groupevent_list')}}">Back to courses</a>
  </div>
</div>

{% endblock %}